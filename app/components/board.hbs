<dl class="px-3 py-2 flex justify-between bg-gray-200 rounded-md shadow-inner">
  <div>
    <dt class="text-sm text-gray-600">Elapsed Time</dt>
    <dd class="font-semibold text-2xl">{{this.elapsedTime}}</dd>
  </div>
  <div class="text-right">
    <dt class="text-sm text-gray-600">Flip Count</dt>
    <dd class="font-semibold text-2xl">{{this.flipCount}}</dd>
  </div>
</dl>

<div class="mt-4 max-w-2xl flex flex-wrap justify-center gap-2">
  {{#each @tiles as |tile|}}
    <Tile
      @tile={{tile}}
      @onTileSelected={{this.tileSelected}}
      @readOnly={{this.readOnly}}
    />
  {{/each}}
</div>